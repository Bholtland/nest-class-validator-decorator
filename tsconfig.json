{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "ES2017",
        "outDir": "lib",
        "declaration": true,
        "diagnostics": true,
        "alwaysStrict": true,
        "allowJs": false,
        "pretty": true,
        "noEmitOnError": true,
        "rootDir": "src",
        "preserveConstEnums": true,
        "typeRoots": ["node_modules/@types"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules", "lib"],
    "include": ["src"],
    "types": ["node", "ioredis", "@types/ioredis"]
}
